<modification>
	<id>Add Kana Language into Catalog</id>
	<version>1</version>
	<vqmver>1.0.0</vqmver>
	<author>pineray</author>
	<file name="admin/language/*/sale/affiliate.php">
		<operation>
			<search position="before"><![CDATA[
				$_['entry_firstname']
			]]></search>
			<add><![CDATA[
				$_['entry_firstkana'] = 'めい:';
				$_['entry_lastkana'] = 'せい:';
			]]></add>
		</operation>
		<operation>
			<search position="before"><![CDATA[
				$_['error_firstname']
			]]></search>
			<add><![CDATA[
				$_['error_firstkana'] = '1文字以上32文字以内で入力してください';
